# ================================================
# Aether Environment Configuration
# ================================================
# Copy this file to .env and configure for your environment
#
# For local development: Use default values (localhost)
# For server deployment: Change SERVER_HOST to your server IP/hostname
#

# ================================================
# Server Configuration
# ================================================
# The IP address or hostname where clients will access the server
# - Local development: localhost or 127.0.0.1
# - Server deployment: Your server's public IP or domain name
# - Examples: 192.168.1.100, aether.example.com, server.company.local
SERVER_HOST=localhost

# API Gateway port (default: 8000)
API_GATEWAY_PORT=8000

# Rust WebSocket Hub port (default: 3100)
RUST_WS_PORT=3100

# Frontend port (default: 5173)
FRONTEND_PORT=5173

# ================================================
# Protocol Configuration
# ================================================
# Use 'https' and 'wss' for production with SSL/TLS
# Use 'http' and 'ws' for local development
PROTOCOL=http
WS_PROTOCOL=ws

# ================================================
# CORS Configuration (Optional)
# ================================================
# Comma-separated list of allowed origins for API access
# Leave empty to allow all origins (not recommended for production)
# Example: https://aether.example.com,https://www.example.com
CORS_ALLOWED_ORIGINS=

# ================================================
# Internal Service Configuration
# ================================================
# These are used for inter-service communication within Docker
# DO NOT change these unless you know what you're doing
REDIS_HOST=redis_broker
REDIS_PORT=6379
RUST_BACKEND_INTERNAL_URL=rust_backend
